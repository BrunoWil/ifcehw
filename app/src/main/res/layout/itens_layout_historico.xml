<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/itemSimuladoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Item Placeholder"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/itemHistoricoAcertos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Item Placeholder"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/itemHistoricoErros"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/itemHistoricoErros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Item Placeholder"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/itemHistoricoBrancos"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toEndOf="@+id/itemHistoricoAcertos"
        app:layout_constraintTop_toBottomOf="@+id/itemSimuladoName" />

    <TextView
        android:id="@+id/itemHistoricoBrancos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Placeholder"
        android:textSize="16sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/itemHistoricoErros"

        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>